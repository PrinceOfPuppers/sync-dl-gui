WindowManager:
    MainWindow:
    NewPlWindow:
    ExistingPlWindow:


<PlaylistList>:

<GridLayout@GridLayout>


<Console>
    foreground_color: (1,1,1,1)
    background_color: (1,1,1,0)
    #padding:45
    #orientation: "vertical"
    #size_hint_y: None
    #height: self.minimum_height
    #row_default_height: 20


<MainWindow>:
    name: "mainWindow"
    playlists:playlists
    GridLayout:
        cols:1
        Label: 
            text: "Sync-dl"
            font_size: dp(50)
        Button:

            text: "New Playlist"
            on_release: 
                app.root.current = 'newPlWindow'
                root.manager.transition.direction = "left"
        Label: 
            text: "Sync-dl Playlists"
            height:
        ScrollView:

            PlaylistList:
                id: playlists
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                row_default_height: 60
                cols:1




<ExistingPlWindow>:
    name: "existingPlWindow"
    console: console
    plLabel: plLabel
    GridLayout:
        cols:1
        Label:
            text: ''
            id: plLabel
            font_size: dp(50)
        Button:
            text: "Smart Sync"
            on_release: 
                root.smartSync()
        Button:

            text: "Append New Songs"
            on_release: 
                root.appendNew()
        Button:
            text: "Reorder Songs"
            on_release: 
                root.reorder()        
        

        Console:
            id: console

        GridLayout:
            cols:2
            Button: 
                text: "Back"
                on_release: 
                    app.root.current = 'mainWindow'
                    root.manager.transition.direction = "right"
            
            Button: 
                text: "Cancel"
                on_release: 
                    root.cancel()


            


<NewPlWindow>:
    name: "newPlWindow"
    url: url
    plName: plName
    console: console
    GridLayout:
        cols:1

        GridLayout:
            cols:2
            Label:
                text: "URL"
            
            TextInput:
                id: url
                multiline: False


            Label:
                text: "Name"
            
            TextInput:
                id: plName
                multiline: False

        Button: 
            text: "Create"
            on_release: 
                root.create()

        Console:
            id: console


        GridLayout:
            cols:2
            Button: 
                text: "Back"
                on_release: 
                    app.root.current = 'mainWindow'
                    root.manager.transition.direction = "right"
            
            Button: 
                text: "Cancel"
                on_release: 
                    root.cancel()
                    #app.root.current = 'mainWindow'
                    #root.manager.transition.direction = "right"