FloatLayout:
    manager: manager
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        Image:
            source: 'test.jpg'
            allow_stretch: True
            keep_ratio: True
            size_hint_y: None
            size_hint_x: None

            width: max((self.parent.height*self.image_ratio,self.parent.width))
            height: max((self.parent.width/self.image_ratio,self.parent.height))
