
<Buttons@GridLayout>:

    padding:(gaps,gaps)
    spacing:(gaps,gaps)

    cols:1

    console:console

    Console:
        size_hint_y:None
        height: root.height*0.6
        id: console
    GridLayout:
        spacing:(gaps,gaps)
        cols:2
        Button:
            text: "New Playlist"

            on_release: 
                app.root.manager.current = 'newPlScreen'
                app.root.manager.transition.direction = "left"
        Button:
            text: "Settings"

            on_release: 
                app.root.manager.current = 'settingsScreen'
                app.root.manager.transition.direction = "left"

<PlaylistList>
    #orientation: "vertical"

    cols:1
    padding:(gaps,0)

<MainScreen>:
    name: "mainScreen"
    playlists:playlists
    console:console
    GridLayout:
        cols:1

        Title: 
            text: "Sync-DL"
        
        Buttons:
            id:console
            size_hint_y:None
            height: root.height*0.35

        Header: 
            text: "Sync-dl Playlists"
            size_hint_y:None

            font_size: sp(20)
            height: sp(self.font_size+20)

        ScrollView:

            PlaylistList:
                id: playlists
                size_hint_y: None
                height: self.minimum_height
                row_default_height: root.height*0.07
                
        Header:
            text:''
            height: root.height*0.05
