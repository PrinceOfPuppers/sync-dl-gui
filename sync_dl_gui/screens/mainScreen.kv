
<MainScreen>:
    name: "mainScreen"
    playlists:playlists
    GridLayout:
        cols:1

        Title: 
            text: "Sync-dl"

        MidButtons:
            cols:2
            Button:
                text: "New Playlist"

                on_release: 
                    app.root.current = 'newPlScreen'
                    root.manager.transition.direction = "left"
            Button:
                text: "Settings"

                on_release: 
                    app.root.current = 'newPlScreen'
                    root.manager.transition.direction = "left"

        Label: 
            text: "Sync-dl Playlists"
            size_hint_y:None
            size: app.relSize(1,0.1)
            font_size: dp(20)

        ScrollView:

            PlaylistList:
                id: playlists

