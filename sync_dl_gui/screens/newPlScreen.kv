<CreateButton@GridLayout>
    cols:1
    padding:(gaps,0)
    size_hint_y:None
    Button: 
        text: "Create"
        on_release: 
            root.parent.parent.create()


<NewPlScreen>:
    name: "newPlScreen"
    url: url
    plName: plName
    console: console
    GridLayout:
        cols:1

        Header: 
            text: 'New Playlist'

        GridLayout:
            cols:2
            padding:(gaps,gaps)
            spacing:(0,gaps)

            LabelPlate:
                text: "URL"
                background_color:greyA

                size_hint_x: None

                width: root.width*0.3
                height: root.height*0.1


            CustomTextInput:
                id: url
                background_color:darkGreyA
                foreground_color: white
                #on_text_validate: root.plName.focus=True
                halign:'center'
                padding:(0,self.height/2 - self.line_height*len(self._lines)/2 )
                #use_bubble: True
                #multiline: False

            LabelPlate:
                text: "Name"
                
                background_color:greyA
                size_hint_x: None

                width: root.width*0.3
                height: root.height*0.1

            
            CustomTextInput:
                id: plName
                background_color:darkGreyA
                foreground_color: white
                halign:'center'
                padding:(0,self.height/2- self.line_height/2)
                on_text_validate: root.create()
                #use_bubble: True
                multiline: False




        CreateButton:
            size_hint_y:None
            height: root.height*0.1


        GridLayout:
            padding:(gaps,gaps)
            cols:1
            Console:
                id: console


        GridLayout:
            cols:2
            size_hint_y:None
            height: root.height*0.1
            Button: 
                text: "Back"
                background_color:darkGreyA
                on_release: 

                    root.manager.current = 'mainScreen'
                    root.manager.transition.direction = "right"
            
            Button: 
                background_color:darkGreyA
                text: "Cancel"
                on_release: 
                    root.cancel()