<CreateButton@GridLayout>
    cols:1
    padding:(10,0)
    size_hint_y:None
    Button: 
        text: "Create"
        on_release: 
            root.parent.parent.create()


<NewPlScreen>:
    name: "newPlScreen"
    url: url
    plName: plName
    console: console
    GridLayout:
        cols:1

        Header: 
            text: 'New Playlist'

        GridLayout:
            cols:2
            padding:(10,10)
            spacing:(10,10)

            LabelPlate:
                text: "URL"
                background_color:greyA

                size_hint_x: None

                width: root.width*0.3
                height: root.height*0.1


            TextInput:
                id: url
                background_color:darkGreyA
                foreground_color: white

                multiline: False

            LabelPlate:
                text: "Name"
                
                background_color:greyA
                size_hint_x: None

                width: root.width*0.3
                height: root.height*0.1

            
            TextInput:
                id: plName
                background_color:darkGreyA
                foreground_color: white
                
                multiline: False



        CreateButton:
            size_hint_y:None
            height: root.height*0.1


        GridLayout:
            padding:(10,10)
            cols:1
            Console:
                id: console


        GridLayout:
            cols:2
            size_hint_y:None
            height: root.height*0.1
            Button: 
                text: "Back"
                background_color:darkGreyA
                on_release: 

                    root.manager.current = 'mainScreen'
                    root.manager.transition.direction = "right"
            
            Button: 
                background_color:darkGreyA
                text: "Cancel"
                on_release: 
                    root.cancel()