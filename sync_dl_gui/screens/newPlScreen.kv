<NewPlScreen>:
    name: "newPlScreen"
    url: url
    plName: plName
    console: console
    GridLayout:
        cols:1

        Header: 
            text: 'New Playlist'
        GridLayout:
            cols:2
            Label:
                text: "URL"

            
            TextInput:
                id: url
                multiline: False

            Label:
                text: "Name"
            
            TextInput:
                id: plName
                multiline: False

        MidButtons:
            cols:1
            Button: 
                text: "Create"
                on_release: 
                    root.create()

        Console:
            id: console


        BottomButtons:
            cols:2
            Button: 
                text: "Back"
                on_release: 
                    app.root.current = 'mainScreen'
                    root.manager.transition.direction = "right"
            
            Button: 
                text: "Cancel"
                on_release: 
                    root.cancel()