<ReOrderScreen>:
    name: "reOrderScreen"
    songList: songList
    plLabel: plLabel

    GridLayout:
        cols:1
        Header:
            id: plLabel
            text:''
        
        GridLayout:
            cols:1
            padding:(gaps,gaps,gaps,gaps)
            ScrollView:

                SongList:
                    id: songList



        GridLayout: 
            size_hint_y:None
            height: root.height*0.1
            cols:1
            Button:
                text: "Apply"
                on_release: 
                    root.apply()

        GridLayout: 
            size_hint_y:None
            height: root.height*0.1
            cols:2
            Button: 
                background_color:darkGreyA
                text: "Back"
                on_release: 
                    root.manager.current = 'existingPlScreen'
                    root.manager.transition.direction = "right"
            
            Button: 
                background_color:darkGreyA
                text: "Cancel"
                on_release: 
                    root.cancel()