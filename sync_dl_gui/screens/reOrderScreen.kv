<ReOrderScreen>:
    name: "reOrderScreen"
    songList: songList
    plLabel: plLabel

    GridLayout:
        cols:1
        Header:
            id: plLabel
            text:''
            
        ScrollView:
            SongList:
                id: songList


        BottomButtons: 
            cols:1
            Button:
                text: "Apply"
                on_release: 
                    root.apply()

        BottomButtons:
            cols:2
            Button: 
                text: "Back"
                on_release: 
                    app.root.current = 'existingPlScreen'
                    root.manager.transition.direction = "right"
            
            Button: 
                text: "Cancel"
                on_release: 
                    root.cancel()