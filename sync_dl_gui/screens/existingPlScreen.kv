<ExistingPlScreen>:
    name: "existingPlScreen"
    console: console
    plLabel: plLabel
    GridLayout:
        cols:1
        Header:
            text: ''
            id: plLabel

        GridLayout:
            cols:2

            Button:
                text: "Smart Sync"
                on_release: 
                    root.smartSync()
            Button:

                text: "Append New Songs"
                on_release: 
                    root.appendNew()
            Button:
                text: "Reorder Songs"
                on_release: 
                    root.reOrder()
            Button:
                text: "Info"
                on_release: 
                    root.info()     

        Console:
            id: console

        BottomButtons:
            cols:2
            Button: 
                text: "Back"
                on_release: 
                    app.root.current = 'mainScreen'
                    root.manager.transition.direction = "right"

            Button: 
                text: "Cancel"
                on_release: 
                    root.cancel()