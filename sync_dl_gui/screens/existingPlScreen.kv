
<MidButtons@GridLayout>
    cols:2

    padding:(gaps,gaps)
    spacing:(gaps,gaps)
    Button:
        text: "Smart Sync"
        on_release: 
            root.parent.parent.smartSync()
    Button:

        text: "   Append \nNew Songs"
        on_release: 
            root.parent.parent.appendNew()

    Button:
        text: "Reorder Songs"
        on_release: 
            root.parent.parent.reOrder()
    Button:
        text: "Info"
        on_release: 
            root.parent.parent.info()    


<ExistingPlScreen>:
    name: "existingPlScreen"
    console: console
    plLabel: plLabel
    GridLayout:
        cols:1
        Header:
            text: ''
            id: plLabel

        MidButtons:
            size_hint_y:None
            height: root.height*0.3

        GridLayout:
            padding:(gaps,0,gaps,gaps)

            cols:1

            Console:
                id: console



        GridLayout:
            cols:2
            size_hint_y:None
            height: root.height*0.1
            
            Button: 
                text: "Back"
                background_color:darkGreyA
                on_release: 
                    root.manager.current = 'mainScreen'
                    root.manager.transition.direction = "right"

            Button: 
                text: "Cancel"
                background_color:darkGreyA
                on_release: 
                    root.cancel()