<SettingTextEntry@CustomTextInput>:
    background_color:darkGreyA
    foreground_color: white

    halign:'center'
    size_hint_y:None
    #size_hint_x:None
    padding:(0,self.height/2- self.line_height/2)
    height: root.parent.parent.parent.height*0.1

<SettingsScreen>:
    name: "settingsScreen"
    musicDir:musicDir
    console: console
    GridLayout:
        cols:1
        
        Title: 
            text: "Settings"
        
        GridLayout:
            cols:2
            padding:(gaps,gaps)
            spacing:(0,gaps)

            LabelPlate: 
                text: "Backend\nVersion"
                size_hint_y:None
                size_hint_x:None
                width: root.width*0.3
                height: root.height*0.1

            SettingTextEntry:
                text: root.getSyncDlVersion()
                use_bubble:False
                #readonly:True
                


            LabelPlate:
                text: "Music\nDirectory"
                background_color:greyA

                size_hint_y:None
                size_hint_x:None
                width: root.width*0.3
                height: root.height*0.1


            SettingTextEntry:
                id: musicDir
                multiline:False
                text: root.getMusicDir()
                on_text_validate: root.setMusicDir()

            
            Button: 
                background_color:greyA
                text: "Apply"

                size_hint_y:None
                size_hint_x:None
                width: root.width*0.3
                height: root.height*0.1
                on_release: 
                    root.setMusicDir()


            ScrollView:
                size_hint_y:None
                height: root.height*0.1
                Console:
                    scrollView:self.parent
                    size_hint_y:None

                    halign:'center'
                    height: max(self.minimum_height,self.parent.height)
                    id: console
            

        GridLayout:
            cols:1
            size_hint_y:None
            height: root.height*0.1
            Button: 
                text: "Back"
                background_color:darkGreyA
                on_release: 

                    root.manager.current = 'mainScreen'
                    root.manager.transition.direction = "right"
            
